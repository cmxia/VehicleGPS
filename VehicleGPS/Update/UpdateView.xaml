<Window x:Class="VehicleGPS.Update.UpdateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="软件更新" Height="200" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!--<RowDefinition Height="35" />-->
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.jpg"></ImageBrush>
        </Grid.Background>
        <Border Grid.Row="0" Margin="10,10,10,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Content_bg.jpg"></ImageBrush>
            </Border.Background>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" 
                       TextWrapping="Wrap" Text="{Binding Prompt}" FontSize="16"></TextBlock>
        </Border>
        <!--<Border Grid.Row="1">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="2,5">
                <Button Content="确定" x:Name="confirm" Command="{Binding ConfirmCommand}" Padding="10,1"></Button>
                <Button Content="取消" x:Name="cancel" Click="cancel_Click" Margin="10,0" Padding="10,1"></Button>
            </StackPanel>
        </Border>-->
    </Grid>
</Window>
