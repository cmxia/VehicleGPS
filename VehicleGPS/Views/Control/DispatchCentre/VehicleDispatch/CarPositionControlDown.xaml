<Window x:Class="VehicleGPS.Views.Control.DispatchCentre.VehicleDispatch.CarPositionControlDown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CarPositionControlDown" Height="480" Width="640">
    <Grid x:Name="LayoutRoot">
        <Path Data="M 10,1 S 28,0 10,23 M 10,1 S -8,0 10,23" Stroke="#CB3333" StrokeThickness="1" Width="20" Height="23" Cursor="Hand">
            <!--"M 10,1 S 28,0 10,23 M 10,1 S -8,0 10,23"-->
            <!--"M 10,22 S 28,23 10,0 M 10,22 S -8,23 10,0"-->
            <Path.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0.4,1">
                    <GradientStop Color="#FFEBE2E2" Offset="0"></GradientStop>
                    <GradientStop Color="#FFEB2929" Offset="0.6"></GradientStop>
                </LinearGradientBrush>
            </Path.Fill>
        </Path>
        <Ellipse Width="6" Height="6" Margin="0,0,0,8" Stroke="#CB3333" StrokeThickness="1" Cursor="Hand">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0.4,1">
                    <GradientStop Color="#FFFFFF" Offset="0"></GradientStop>
                    <GradientStop Color="#FF13131F" Offset="0.8"></GradientStop>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Grid>
</Window>
