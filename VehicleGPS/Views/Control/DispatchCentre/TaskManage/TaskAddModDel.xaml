                        </Grid>
                        <TextBlock Text="已运输量：" VerticalAlignment="Center"></TextBlock>
                        <Grid Width="150" Margin="3,3,30,3">
                            <TextBox Text="{Binding TransedCap}" IsEnabled="{Binding TransedEnable}"></TextBox>
