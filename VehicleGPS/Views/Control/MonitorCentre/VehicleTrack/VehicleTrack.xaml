                            <DataGridTextColumn Header="GPS天线状态" Binding="{Binding Gpsantstatus}"></DataGridTextColumn>

                            <!--<DataGridTextColumn Header="紧急报警" Binding="{Binding VehicleInfo.VehicleGPSInfo.Soswarn}"></DataGridTextColumn>
