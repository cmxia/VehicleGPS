<UserControl x:Class="VehicleGPS.Views.Control.MessCenter.ChatMes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid Width="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Name="postId" Padding="0,3,0,0" Margin="2,0,10,0" FontSize="12" Foreground="Blue"></TextBlock>
            <TextBlock Name="postTime" Width="140" Padding="0,3,0,0" FontSize="12" Foreground="Blue"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Height="auto">
            <TextBox Name="OneMessage" FontSize="14" Width="230" TextWrapping="Wrap" AcceptsReturn="True" Margin="15,0,0,0" Height="auto" IsReadOnly="True"  BorderThickness="0"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
